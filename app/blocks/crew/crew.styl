.crew
	display block
	section-title()

	&__container
		container()


	&__crew-cards
		center()

	&__social-link
		cursor pointer

	&__crew-card
		column(1/4, 0, 4)
		padding-bottom: 60px


		&:hover .crew__img
			transform scale(1.04) translateY(10px)

		&:hover .crew__text-wrapper
			display block

	&__img
		transition all 0.3s

	&__name
		text-align center
		margin-bottom: 10px
		margin-top: 30px
		font-family Roboto

		font-size(17px)
		text-transform uppercase

	&__img-wrapper
		position relative

	&__text-wrapper
		position absolute
		display: none
		left 5%
		right 5%
		bottom 1rem
		background red
		opacity 0.8
		transition 0.2s


	&__text
		color white
		padding 2rem 1em
		text-align center
		font-family Roboto
		font-size(11px);

	&__socials
		text-align center

	&__icon
		width 38px
		height 38px
		fill white
		display inline-block
		margin: 10px
		padding: 4px
		border 2px solid white
		border-radius 50%

	&__pos
		text-align center
		font-size(12px)
		text-transform uppercase
		font-family Roboto

@media (max-width: 700px)
	.crew
		&__crew-card
			column(1/2, 0, 2)



@media (max-width: 400px)
	.crew
		&__crew-card
			column(1, 0, 1)





@media (max-width: 500px)
	.crew
		&__crew-card
			column(1/2, 0, 2)





@media (max-width: 400px)
	.crew
		&__crew-card
			span(1, 0, 1)


		&__img-wrapper
			text-align center

		&__img
			display inline-block




