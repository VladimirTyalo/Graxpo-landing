.featured
	display block
	background bg-darker

	section-title()

	&__container
		container()


	&__details-wrapper
		display flex
		flex-flow row nowrap
		justify-content center
		position relative

	&__img-wrapper
		flex 1 1 30%
		position relative

		&::after
			content ''
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			border 20px solid transparent
			background rgba(253,92,79,0.9)
			background-clip content-box
			z-index 20
			opacity 0
			transition 0.5s


	&__img
		display block
		width 100%

	&__btn-view
		cursor pointer
		display none
		position absolute
		padding 1em
		border 2px solid white
		border-radius 0.4em
		top 50%
		left 50%
		transform translate(-50%, -50%)
		color white



.featured__img-wrapper:hover::after
	opacity 1
