.service
	display block
	margin-top 60px
	overflow-x hidden

	section-title(color-font-title)

	&__container
		container(white)

	&__service-wrapper
		background red

	&__content-wrapper
		display flex
		flex-flow row wrap
		justify-content space-between


	img
		opacity:0
		transition: all .3s



	&__img-left
		transform: translateX(-30%) scale(0.95);

	&__img-right
		transform: translateX(30%) scale(0.95);

	&__img_active
		opacity 1 !important
		transform: translateX(0%) scale(1) !important

	info(white)


@media (max-width: 1150px)
	.service

		&__info-wrapper
			flex 1 0 100% !important

		&__content-wrapper
			& *:first-child
				order 1

			& *:nth-child(2)
				order 2

			& *:nth-child(3)
				order 4

			& *:nth-child(4)
				order 3

			& *:nth-child(5)
				order 5
