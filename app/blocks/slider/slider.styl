.swiper

	&-container
		width: 100%
		height 100%
		min-height: 680px
		overflow hidden

	&-container-horizintal
		display inline-block

	&-wrapper
		display: flex;
		flex-flow: row nowrap


	&-slide
		background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(20, 20, 20, 0.4)),
								url('../images/bg-bycicle.jpg')
		background-size cover
		background-repeat no-repeat
		color white
		flex: 1 0 100%;
		min-height: 680px

	&-slide-container
		container(100%);

	&-avatar
		width: 100px
		height: 100px;
		display block;
		margin: 0 auto;
		border-radius: 50%;
		margin-bottom: 30px

	&-author
		text-align center
		margin-bottom: 30px
		display block
		font-family Roboto
		font-wight bolder
		font-size(20px)
		color red
		text-transform uppercase
		letter-spacing 3px

	&-text
		text-align center
		max-width: 700px
		margin 45px auto


	&-pagination
		height: 20px;
		position relative
		width: 320px
		bottom: 90px
		left: 50%
		transform: translateX(-50%)
		text-align: center

	&-pagination-bullet
		display: inline-block;
		width: 10px;
		height: 10px;
		border-radius: 50%;
		border: 1px solid red;
		margin-right: 10px

		&-active
			background red;

.page
	section-title(white)
	&__title
		margin-top: 90px
		letter-spacing: 5px

	&__description
		font-size(18px)
		font-family OpenSans
		text-transform uppercase
		margin-top: 60px
		letter-spacing 5px
