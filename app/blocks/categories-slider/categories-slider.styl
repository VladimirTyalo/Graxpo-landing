.categories-slider
	display block

	text-align center

	&__tabs
		margin: 0
		padding: 0


	&__tab
		position relative
		display inline-block
		padding: 15px
		cursor pointer
		color color-font-tabs

		&_active::before
			content: ''
			position absolute
			left 1em
			bottom 0
			width 30%
			height 3px
			background color-font-tabs



		&::after
			content '/'
			position absolute
			top 1em
			right -0.5em

		&:last-child::after
			display none

