.latest-blog
	display block
	section-title()

	&__container
		container()

	&__posts
		center()

	&__post
		column(1/2, 0, 2)
		position relative

	&__info
		position absolute
		top 0
		right 0
		color white
		background red
		opacity 0.9
		height 100%
		padding 30px
		column(1/2 , 0, 1)

	&__info-author
		margin-bottom: 10px

	&__info-description
		margin-bottom: 20px

	&__info-date
		padding-left: 30px
		position relative

		&::before
			content ''
			position absolute
			top 0
			left 0
			width 30px
			height 30px
			background url('../images/icon.svg#calendar') no-repeat

	&__info-title
		title(true, false, false, white)
		color white
		font-size(16px)
		margin-top: 110px

