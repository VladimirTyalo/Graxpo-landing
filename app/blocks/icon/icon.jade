mixin icon(iconName, isBlock)
	if isBlock
		svg&attributes(attributes)
			use(xlink:href='#icon_#{iconName}')
	else
		+e.SVG.icon&attributes(attributes)
			use(xlink:href='#icon_#{iconName}')
