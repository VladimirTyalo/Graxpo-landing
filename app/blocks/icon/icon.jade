mixin icon(iconName, isBlock, width, height)
	- var width = width || 30
	- var height = height || 30
	if isBlock
		svg(width = width, height = height)
			use(xlink:href='#icon_#{iconName}')
	else
		+e.SVG(width = width, height = height).icon
			use(xlink:href='#icon_#{iconName}')
