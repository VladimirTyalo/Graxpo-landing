.views
	min-height 368px
	position relative

	&__container
		container()

	&__overlay
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background red
		opacity 0.9
		transition 1s
		z-index 10

	&__background
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background-image url('../images/city-street.jpg')
		opacity 1
		transition 1s
		z-index 1


	&__features
		margin 0
		margin-top 4em
		padding 0
		list-style none
		display flex
		justify-content space-around
		align-items stretch
		flex-flow row wrap

	&__item
		position relative
		max-width 200px
		padding 1em
		z-index 30


	&__amount
		font-family Roboto
		font-size(30px)
		color white
		margin-left: 50px
		margin-bottom: 2em
		text-align right


	&__title
		font-family Roboto
		title(true)
		display block
		width 100%
		font-size(16px)
		text-transform: uppercase
		color white

		&::after
			background white



	&__icon
		position absolute
		width 50px
		height 50px
		fill white


.views:hover .views__overlay
	opacity 0

.views:hover .views__background
	opacity 1




@media (max-width: 750px)
	.views
		&__item
			display block
			width: 100%
			max-width: 100%

		&__features
			flex-wrap wrap

		&__overlay
			opacity 0.8 !important

		&__background
			opacity 1 !important

@media (max-width: 500px)
	.views

		&__features
			flex-flow column nowrap

		&__item
			align-self center

