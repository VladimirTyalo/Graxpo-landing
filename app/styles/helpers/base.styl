// allow svg icons to be colored by CSS
svg,
symbol,
circle,
ellipse,
g,
line,
path,
polygon,
polyline,
rect 
    fill: inherit
    stroke: inherit



html
    height 100%

body
    margin 0 
    padding 0
    height 100%
    font-family OpenSans
    font-size(16px)
    background bg-main


a 
    text-decoration none